#!/bin/sh

remote=0

while [ -n "$1" ]
do
  case "$1" in
    --remote=*)
      remote=1
      host=${1#--remote=};;
    --noremote)
      remote=0;;
  esac
  shift
done


echo "# /etc/rsyslog.d/remote.conf is managed by xe-syslog-reconfigure (do not edit)" > /etc/rsyslog.d/remote.conf
if [ $remote -eq 1 ]; then
  echo "*.* @$host" >> /etc/rsyslog.d/remote.conf
fi

systemctl restart rsyslog
