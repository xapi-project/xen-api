#!/bin/bash

set -e

function usage()
{
  echo "
Usage:
        $0 <filename.iso>
" >&2
  exit 1
}

if [ -n "$DEVICE" ]
then
  iso="/dev/$DEVICE"
else
  iso="$1"
fi

set -u

if [ ! -f "$iso" ] && [ ! -b "$iso" ]
then
  usage
fi

if !(file -s "$iso" | grep -q "ISO 9660")
then
  echo "Supplemental pack must be an ISO." >&2
  exit 2
fi

tempdir=$(mktemp -d)

function cleanup()
{
  if mount | grep "$tempdir" >/dev/null
  then
    popd >/dev/null
    umount "$tempdir" || true
  fi
  rmdir "$tempdir"
}

trap cleanup ERR

mount -o loop,ro "$iso" "$tempdir"
pushd "$tempdir" >/dev/null
./install
cleanup
