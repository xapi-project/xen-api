(jbuild_version 1)

(library (
  (name c_stubs)
  (public_name xapi-xenopsd.c_stubs)
  (wrapped false)
  (c_names (
    poll_stubs
    sockopt_stubs
    statdev_stubs
    stub_tap_open
    xenctrlext_stubs
  ))
  (c_library_flags (:include xentoollog_flags.sexp))
))

(rule (
  (targets (xentoollog_flags.sexp))
  (deps (../xentoollog_flags))
  (action (
    with-stdout-to ${@} (bash "echo \"($(< ${<}))\"")
  ))
))
