(rule
  (targets build_info.ml)
  (deps gen_build_info_ml.sh)
  (action (with-stdout-to %{targets} (bash "./gen_build_info_ml.sh")))
)

(library
  (name xapi_version)
  (public_name xapi-consts.xapi_version)
  (modules
   xapi_version
   build_info
   tar_helpers
  )
  (libraries
   xapi-inventory
   cstruct
   tar
   tar-unix
  )
  (wrapped false)
)
