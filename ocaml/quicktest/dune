(executable
  (modes byte exe)
  (name quicktest)
  (public_name quicktestbin)
  (package xapi)
  (libraries
    alcotest
    astring
    dune-build-info
    fmt
    forkexec
    http_lib
    mtime
    mtime.clock.os
    result
    rresult
    rpclib.core
    stunnel
    threads.posix
    unix
    uuid
    xapi-client
    xapi-consts
    xapi-datamodel
    xapi_internal
    xapi-types
    xapi-stdext-date
    xapi-stdext-pervasives
    xapi-stdext-std
    xapi-stdext-threads
    xapi-stdext-unix
    xenctrl
    xml-light2
  )
  (preprocess (pps ppx_deriving_rpc ppx_sexp_conv))
)


(rule
 (alias runtest)
 (action (run ./quicktest.exe -skip-xapi -- list))
)

(rule
 (alias runtest-systemd-user)
 (deps ./quicktest.exe ../forkexecd/src/fe_main.exe)
 (action (run ./systemd_user_test.sh))
)
