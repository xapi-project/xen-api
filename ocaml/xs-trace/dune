(executable
  (modes exe)
  (name xs_trace)
  (public_name xs-trace)
  (package xapi-tools)
  (libraries
    uri
    tracing
    cmdliner
    tracing_export
    xapi-stdext-unix
    zstd
  )
)

(rule
  (targets xs-trace.1)
  (deps (:exe xs_trace.exe))
  (action (with-stdout-to %{targets} (run %{exe} --help=groff)))
)

