OCAML_LIBS    = ../fhs ../util/version ../idl/ocaml_backend/common
OCAMLINCLUDES = ../xapi
OCAMLPACKS += unix cdrom

OCamlProgram(cdrommon, cdrommon)

.PHONY: install
install:
	mkdir -p $(DESTDIR)$(LIBEXECDIR)
	cp -f cdrommon $(DESTDIR)$(LIBEXECDIR)

.PHONY: clean
clean:
	rm -rf $(CLEAN_OBJS) *.aux *.log *.fig cdrommon
