(rule
  (alias runtest)
  (package http-lib)
  (deps
    (:x http_test.exe)
  )
  (action (run %{x} -runner sequential -verbose true))
)

(rule
  (alias runtest)
  (package xapi)
  (deps
    test_client.exe
    test_server.exe
    client_server_test.sh
  )
  (action (run bash client_server_test.sh))
)

