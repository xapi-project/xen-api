(library
  (name http_lib)
  (public_name http-lib)
  (modes best)
  (wrapped false)
  (modules (:standard \ http_svr http_proxy server_io http_test radix_tree_test test_client test_server))
  (preprocess (per_module ((pps ppx_deriving_rpc) Http)))
  (libraries
    astring
    base64
    mtime
    mtime.clock.os
    rpclib.core
    rpclib.json
    rpclib.xml
    safe_resources
    sha
    stunnel
    threads.posix
    uuid
    xapi-backtrace
    xapi-consts.xapi_version
    xapi-idl.updates
    xapi-log
    xapi-stdext-date
    xapi-stdext-pervasives
    xapi-stdext-threads
    xapi-stdext-unix
    xml-light2
    tracing
  )
)

(library
  (name httpsvr)
  (wrapped false)
  (modules http_svr http_proxy server_io)
  (libraries
    astring
    http_lib
    polly
    threads.posix
    xapi-log
    xapi-stdext-pervasives
    xapi-stdext-threads
    xapi-stdext-unix
  )
)

(executable
  (modes byte exe)
  (name http_test)
  (modules http_test)
  (libraries
    dune-build-info
    http_lib
    ounit2
  )
)

(test
  (name radix_tree_test)
  (modules radix_tree_test)
  (package http-lib)
  (libraries
    dune-build-info
    http_lib
  )
)

(executable
  (modes byte exe)
  (name test_client)
  (modules test_client)
  (libraries
    dune-build-info
    http_lib
    ounit2
    safe-resources
    stunnel
    threads.posix
    xapi-stdext-pervasives
    xapi-stdext-unix
  )
)

(executable
  (modes byte exe)
  (name test_server)
  (modules test_server)
  (libraries
    dune-build-info
    http_lib
    httpsvr
    ounit2
    safe-resources
    threads.posix
    xapi-stdext-threads
    xapi-stdext-unix
  )
