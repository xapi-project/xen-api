(* -*- tuareg -*- *)
let coverage_rewriter =
  match Sys.getenv "BISECT_ENABLE" with
  | "YES" -> "bisect_ppx"
  | _ -> ""
  | exception Not_found -> ""

let () = Printf.ksprintf Jbuild_plugin.V1.send {|

(test
  (name suite_alcotest)
  (package xapi)
  (flags (:standard -warn-error +a-3-4-6-9-27-28-29-52))
  (libraries
    alcotest
    certificate_check
    daily_license_check
    nocrypto.unix
    xapi_internal
    xapi-stdext-date
  )
  (preprocess (pps ppx_deriving_rpc ppx_sexp_conv %s))
  (deps (source_tree test_data))
  (action (run %%{test} --color=always))
)

(alias
  (name runtest)
  (package xapi)
  (deps
    (:x ../xapi/xapi_main.exe)
  )
  (action (run ./check-no-xenctrl %%{x}))
)
|} coverage_rewriter
