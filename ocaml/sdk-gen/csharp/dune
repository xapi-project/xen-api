(executable
  (modes exe)
  (name gen_csharp_binding)
  (modules Gen_csharp_binding)
  (libraries
    astring
    CommonFunctions
    dune-build-info
    mustache
    xapi-consts
    xapi-datamodel
  )
)

(executable
  (modes exe)
  (name friendly_error_names)
  (modules Friendly_error_names)
  (libraries
    CommonFunctions
    dune-build-info
    mustache
    xapi-datamodel
    xmllight2
    str
  )
)

(rule
  (alias generate)
  (deps
    (:x gen_csharp_binding.exe)
    (source_tree templates)
  )
  (action (run %{x}))
)

(rule
  (alias generate)
  (deps
    (:x friendly_error_names.exe)
    FriendlyErrorNames.resx
    (:y XE_SR_ERRORCODES.xml)
    (source_tree templates)
  )
  (action (run %{x} -s %{y}))
)

