(* -*- tuareg -*- *)
#require "unix"

let coverage_rewriter =
  let is_coverage = try Unix.getenv "BISECT_ENABLE" = "YES" with Not_found -> false in
  if is_coverage then
    "(preprocess (pps (bisect_ppx -conditional)))"
  else
    ""

let () = Printf.ksprintf Jbuild_plugin.V1.send {|
(executable
 ((name perftest)
  (public_name perftest)
  (package xapi)
  (libraries (
    xml-light2
    stdext
    stunnel
    http-svr
    xcp
    rpclib
    uuid
    threads
    xapi-client
  ))
  %s
 )
) |} coverage_rewriter
