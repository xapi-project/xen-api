   xapi-log
 )
 (preprocess (per_module ((pps ppx_deriving_rpc) Task_server_test Updates_test))))

(rule
  (alias runtest)
  (package xapi-idl)
  (deps (:exe ./test.exe) (source_tree test_data/guard))
  (action (run %{exe}))
