CFLAGS = $(XEN_CFLAGS) $(CFLAGS)
OCAMLINCLUDES = $(XEN_OCAMLINCLUDES) $(OCAMLINCLUDES)
# xc.cma depends on uuid.cma
OCAML_LIBS = $(OCAML_LIBS) $(XEN_OCAML_LIBS)
OCAMLPACKS = $(XEN_OCAMLPACKS) $(OCAMLPACKS)

