)

(executable
 ((name xapi_main)
  (public_name xapi)
  (package xapi)
  (modules (xapi_main))
  (flags (:standard -bin-annot %s -warn-error +a-3-4-6-9-27-28-29-52))
  (libraries (
   xapi_internal
  ))
))
|}(flags rewriters) coverage_rewriter (flags rewriters)
