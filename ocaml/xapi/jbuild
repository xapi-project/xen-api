(* -*- tuareg -*- *)
let coverage_rewriter =
  match Sys.getenv "BISECT_ENABLE" with
  | "YES" -> "bisect_ppx"
  | _ -> ""
  | exception Not_found -> ""

let () = Printf.ksprintf Jbuild_plugin.V1.send {|
(rule
 ((targets (server.ml))
  (deps (../idl/ocaml_backend/gen_api_main.exe))
  (action (run ${<} -filterinternal true -gendebug -filter closed -mode server -output ${@}))
 )
)

(rule
 ((targets (db_actions.ml))
  (deps (../idl/ocaml_backend/gen_api_main.exe))
  (action (run ${<} -filterinternal false -filter nothing -mode db -output ${@}))
 )
)

(rule
 ((targets (custom_actions.ml))
  (deps (../idl/ocaml_backend/gen_api_main.exe))
  (action (run ${<} -filterinternal true -filter closed -mode actions -output ${@}))
 )
)

(rule
 ((targets (rbac_static.ml))
  (deps (../idl/ocaml_backend/gen_api_main.exe))
  (action (run ${<} -filterinternal true -filter closed -mode rbac -output ${@}))
 )
)

(rule
 ((targets (rbac_static.csv))
  (deps (../idl/ocaml_backend/gen_api_main.exe))
  (action (run ${<} -filterinternal true -gendebug -filter closed -mode rbac -output ${@}))
 )
)

(install
 ((section share)
  (files (rbac_static.csv))
  (package xapi)
 )
)

(library
 ((name xapi_internal)
  (wrapped false)
  (flags (:standard -warn-error +a-3-4-6-9-27-28-29-52))
  (modules (:standard \ xapi_main))
  (libraries (
   seahash
   unixpwd
   pam
   pciutil
   pci
   ezxenstore
   message-switch-unix
   mtime
   mtime.clock.os
   sha
   tar
   tar-unix
   xapi-tapctl
   x509
   xapi_version
   xapi-types
   xapi-client
   xapi-datamodel
   xapi-cli-protocol
   xapi-test-utils
   stdext
   threads
   xenctrl
   xapi-idl
   xapi-idl.cluster
   xapi-idl.rrd
   xapi-idl.storage
   xapi-idl.xen
   xapi-idl.network
   xapi-idl.v6
   xapi-idl.memory
   xapi-idl.gpumon
   xapi-idl.updates
   rrdd-plugin
   xapi-xenopsd
   xapi-netdev
   yojson
  ))
  (preprocess (pps (ppx_deriving_rpc %s))))
)

(executable
 ((name xapi_main)
  (public_name xapi)
  (package xapi)
  (modules (xapi_main))
  (flags (:standard -warn-error +a-3-4-6-9-27-28-29-52))
  (libraries (
   xapi_internal
  ))
))
|} coverage_rewriter
