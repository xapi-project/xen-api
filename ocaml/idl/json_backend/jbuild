(* -*- tuareg -*- *)
#require "unix"

let coverage_rewriter =
  let is_coverage = try Unix.getenv "BISECT_ENABLE" = "YES" with Not_found -> false in
  if is_coverage then
    "(preprocess (pps (bisect_ppx -conditional)))"
  else
    ""

let () = Printf.ksprintf Jbuild_plugin.V1.send {|
(executable
 ((name gen_json)
  (libraries (
   xapi-datamodel
   xapi-consts
   xapi-stdext-unix
   xapi-stdext-std
  ))
  %s
 )
)

(alias
 ((name runtest)
  (deps (gen_json.exe))
  (action (run ${<}))
 )
)
|} coverage_rewriter
