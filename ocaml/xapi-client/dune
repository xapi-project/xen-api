(rule
  (targets client.ml)
  (deps
    ../idl/ocaml_backend/gen_api_main.exe
  )
  (action
    (run %{deps} -filterinternal true -filter closed -mode client -output
      %{targets}))
)

(library
  (name xapi_client)
  (public_name xapi-client)
  (libraries
    mtime
    mtime.clock.os
    rpclib.core
    xapi-consts
    xapi-idl
    xapi-types
    xapi-stdext-date
    xapi-stdext-pervasives
  )
  (wrapped false)
)

