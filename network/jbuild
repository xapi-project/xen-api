(* -*- tuareg -*- *)
let coverage_rewriter =
  match Sys.getenv "BISECT_ENABLE" with
  | "YES" -> "bisect_ppx"
  | _ -> ""
  | exception Not_found -> ""

let () = Printf.ksprintf Jbuild_plugin.V1.send {|
(jbuild_version 1)

(library
 ((name xcp_network)
  (public_name xcp.network)
  (flags (:standard -w -39-33))
  (modules (:standard \ network_cli))
  (libraries
   (rpclib
    threads
    xcp))
  (wrapped false)
  (preprocess (pps (ppx_deriving_rpc %s)))))

(executable
 ((name network_cli)
  (modules (network_cli))
  (libraries
   (cmdliner
    rpclib.cmdliner
    rpclib.markdown
    xcp.network))))

(alias
 ((name runtest)
   (deps (network_cli.exe))
     (action (run ${<}))))

|} coverage_rewriter
