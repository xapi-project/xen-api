(executables
 ((names (benchmark test stress))
  (libraries   (lwt cstruct.lwt mirage-block-unix cstruct io-page io-page.unix
                logs logs.fmt oUnit diet))
  (preprocess (pps (ppx_sexp_conv)))
))

(alias
 ((name    runtest)
  (deps    (test.exe))
  (action  (run ${<} -runner sequential))))

(alias
 ((name    runtest)
  (deps    (stress.exe))
  (action  (run ${<}))))
