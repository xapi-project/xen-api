name: xcp-rrdd
version: 1.0.0
synopsis: XCP RRD Daemon
obuild-ver: 1

library rrdd-libs
  src-dir: lib
  modules: stats, constants, pool_role_shared
  build-deps: xcp, stdext

executable xcp-rrdd
  main: rrdd_main.ml
  src-dir: rrdd
  build-deps: threads, rpclib, rpclib.unix, gzip, forkexec, stdext, uuid, http-svr, xcp-inventory, xcp-rrd, rrdd-libs, xcp, xcp.rrd, xcp.network, xcp.xen, xenctrl, xenstore.unix, xenstore_transport.unix, xenops
  pp: camlp4o
