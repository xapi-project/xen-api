(* -*- tuareg -*- *)
let coverage_rewriter =
  match Sys.getenv "BISECT_ENABLE" with
  | "YES" -> "bisect_ppx"
  | _ -> ""
  | exception Not_found -> ""

let () = Printf.ksprintf Jbuild_plugin.V1.send {|
(jbuild_version 1)

(library
 ((name xapi_gpumon)
  (public_name xcp.gpumon)
  (flags (:standard -w -39-33))
  (modules (:standard \ gpumon_cli ))
  (libraries
   (rpclib
    threads
    xcp))
  (wrapped false)
  (preprocess (pps (ppx_deriving_rpc %s)))))

(executable
 ((name gpumon_cli)
  (modules (gpumon_cli))
  (libraries
   (cmdliner
    rpclib.cmdliner
    rpclib.markdown
    xcp.gpumon))))

(alias
 ((name runtest)
  (deps (gpumon_cli.exe))
  (action (run ${<}))))

|} coverage_rewriter
