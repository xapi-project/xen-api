(* -*- tuareg -*- *)
let coverage_rewriter =
  match Sys.getenv "BISECT_ENABLE" with
  | "YES" -> "bisect_ppx"
  | _ -> ""
  | exception Not_found -> ""

let () = Printf.ksprintf Jbuild_plugin.V1.send {|
(jbuild_version 1)

(library
 ((name xcp_memory)
  (public_name xcp.memory)
  (flags (:standard -w -39))
  (modules (:standard \ memory_cli))
  (libraries
   (rpclib
    threads
    xcp))
  (wrapped false)
  (preprocess (pps (ppx_deriving_rpc %s)))))

(executable
 ((name memory_cli)
  (modules (memory_cli))
  (libraries
   (cmdliner
    rpclib.cmdliner
    rpclib.markdown
    xcp.memory))))

(alias
 ((name runtest)
  (deps (memory_cli.exe))
  (action (run ${<}))))

|} coverage_rewriter
